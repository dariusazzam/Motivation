def ready():
    ask_ready = input("Apakah kamu sudah siap?👊🏻 (cukup jawab 'ya' atau 'tidak') ")
    while ask_ready != "ya" and ask_ready != "tidak":
        ask_ready = input("Apakah kamu sudah siap?👊🏻 (cukup jawab 'ya' atau 'tidak') ")
    if ask_ready == "ya":
        return input("Oke sip, sebelumnya cewek apa cowok nih?🤔 ")
    elif ask_ready == "tidak":
        input("Wah... Kalau gitu kamu tarik nafas dulu yak, rileksin dirimu dulu.🥺 Sudah? (jawab 'sudah') ")
        return input("Oke sip, sebelumnya cewek apa cowok nih?🤔 (jawab 'cewek' atau 'cowok') ")

# Memanggil fungsi ready dan menyimpan hasilnya di variabel gender_ask
gender_ask = ready()

def name(gender_ask):
    if gender_ask == "cewek":
        return input(f"Wah ada {gender_ask} cantik nih.🤩 Nama panggilannya siapa kalau boleh tahu? ")
    elif gender_ask == "cowok":
        return input(f"Wah ada {gender_ask} ganteng nih.🤩 Nama panggilannya siapa kalau boleh tahu? ")

# Memanggil fungsi name dengan parameter gender_ask
name_ask = name(gender_ask)

def gift():
  if gender_ask == "cewek":
    return input(f"Halo {name_ask} cantik! Salam kenal ya😁 Semoga kamu selalu sehat!💪🏻 By the way, aku mau ngasih kamu hadiah nih, cukup ketik satu angka saja di antara angka 1 atau 2 atau 3🎁😼 ")
  elif gender_ask == "cowok":
